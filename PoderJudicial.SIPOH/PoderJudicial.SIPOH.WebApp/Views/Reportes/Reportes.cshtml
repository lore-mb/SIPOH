
@{
    ViewBag.Title = "Reportes";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Generar Reportes</h4>
        </div>

        <div class="card-body">

            <ul class="nav nav-pills nav-sm nav-success" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Reportes por Día</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Reportes por Fecha</a>
                </li>
            </ul>

            <div class="tab-content mt-2 mb-3" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <!-- #region Formulario Reporte por Día -->
                    <form class="needs-validation" id="FrmReporteInicialDia" novalidate="">
                        <div class="form-row">

                            <div class="col-md-2 form-group">
                                <label><strong>Formato de Reporte</strong></label>
                                <div class="input-group">
                                    <select id="slcFormatoReporte" class="custom-select custom-select-sm">
                                        <option value="0">INICIALES</option>
                                        <option value="1">PROMOCIONES</option>
                                    </select>
                                    <div class="valid-feedback" wfd-invisible="true">
                                        <i class="icon-checkmark"></i> Formato seleccionado.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-7 form-group">
                                <label><strong>Nombre de Juzgado</strong></label>
                                <div class="input-group">
                                    @Html.DropDownList("SelectJuzgadoPorCircuito", new SelectList(ViewBag.ListaCircuitoJuzgadoPromociones, "IdJuzgado", "Nombre"), "SELECCIONAR OPCIÓN", new { @id = "slctJuzgadoPorCircuitoDia", @class = "custom-select custom-select-sm resultOK", @required = "required" })
                                    <div class="valid-feedback" wfd-invisible="true">
                                        <i class="icon-checkmark"></i> Juzgado Seleccionado
                                    </div>
                                    <div class="invalid-feedback" wfd-invisible="true">
                                        <i class="icon-cancel-circle"></i> Por favor, selecciona un juzgado.
                                    </div>
                                </div>
                            </div>

                            <div class=" col-md-3 form-group">
                                <label><strong>Fecha de Hoy</strong></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-calendar"></i> </span>
                                    </div>
                                    <input type="text" class="form-control form-control-sm disabled text-center" id="inpFechaHoy" disabled />
                                    <button class="btn btn-success btn-sm ml-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Generar y descargar PDF"><i class="icon-download2"></i></button>
                                </div>
                            </div>

                        </div>
                    </form>
                    <!-- #endregion Formulario Reporte por Día -->
                </div>

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <!-- #region Formulario Reporte por Fecha -->
                    <form class="needs-validation" id="FrmReporteInicialRangoFechas" novalidate="">

                        <div class="form-row">

                            <div class="col-md-2 form-group">
                                <label><strong>Formato de Reporte</strong></label>
                                <div class="input-group">
                                    <select id="slcFormatoReporteFecha" class="custom-select custom-select-sm">
                                        <option value="0">INICIALES</option>
                                        <option value="1">PROMOCIONES</option>
                                    </select>

                                    <div class="valid-feedback" wfd-invisible="true">
                                        <i class="icon-checkmark"></i> Formato seleccionado.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5 form-group">
                                <label><strong>Nombre de Juzgado</strong></label>
                                @Html.DropDownList("SelectJuzgadoPorCircuito", new SelectList(ViewBag.ListaCircuitoJuzgadoIniciales, "IdJuzgado", "Nombre"), "SELECCIONAR OPCIÓN", new { @id = "slctJuzgadoPorCircuito", @class = "custom-select custom-select-sm  resultOK", @required = "required" })
                                <div class="valid-feedback" wfd-invisible="true">
                                    <i class="icon-checkmark"></i> Juzgado Seleccionado
                                </div>
                                <div class="invalid-feedback" wfd-invisible="true">
                                    <i class="icon-cancel-circle"></i> Por favor, selecciona un juzgado.
                                </div>
                            </div>

                            <div class="col-md-2 form-group">
                                <label><strong>Periodo Inicial</strong></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-calendar"></i> </span>
                                    </div>
                                    <input type="text" class="form-control form-control-sm text-center" id="datetimepickerFechaInicial" name="datetime" placeholder="AAAA-MM-DD" required>
                                    <div class="valid-feedback" wfd-invisible="true">
                                        <i class="icon-checkmark"></i> Fecha Inicial.
                                    </div>
                                    <div class="invalid-feedback" wfd-invisible="true">
                                        <i class="icon-cancel-circle"></i> Por favor, seleeciona fecha inicial.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 form-group">
                                <label><strong>Periodo Final</strong></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-calendar"></i> </span>
                                    </div>
                                    <input type="text" class="form-control form-control-sm text-center" id="datetimepickerFechaFinal" name="datetime" placeholder="AAAA-MM-DD" required />
                                    <div class="valid-feedback" wfd-invisible="true">
                                        <i class="icon-checkmark"></i> Fecha Final.
                                    </div>
                                    <div class="invalid-feedback" wfd-invisible="true">
                                        <i class="icon-cancel-circle"></i> Por favor, selecciona fecha final.
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-1 form-group">
                                <label class="invisible"> Texto</label>
                                <div class="input-group">
                                    <button class="btn btn-success btn-sm form-control" data-toggle="tooltip" data-placement="top" title="" data-original-title="Generar y descargar PDF"><i class="icon-download2"></i></button>
                                </div>
                            </div>

                        </div>

                    </form>
                    <!-- #endregion -->
                </div>
            </div>

            <div class="form-row">
                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                    <input type="hidden" id="valorViewBag" data-value="@ViewBag.Mensaje" />
                }
            </div>

        </div>
    </div>
</div>


@Scripts.Render("~/Scripts/jQuery")
@Scripts.Render("~/Scripts/EjecucionReportes")

