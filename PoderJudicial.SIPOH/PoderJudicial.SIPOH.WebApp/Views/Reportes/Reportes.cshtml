
@{
    ViewBag.Title = "Reportes";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Generar Reportes</h4>
        </div>
        <div class="card-body">
            <ul class="nav nav-pills nav-success" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Iniciales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Promociones</a>
                </li>
            </ul>
            <div class="tab-content mt-2 mb-3" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                    <!-- Formulario para reportes -->
                   <br />

                    <div id="accordion">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link text-success" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                       <i  class="icon-calendar"></i> Reporte por Fecha
                                    </button>
                                </h5>
                            </div>

                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body">
                                    <!-- Contenido -->
                                    <div class="col">
                                        <form class="needs-validation" id="FrmReporteInicialRangoFechas" novalidate="">
                                            <div class="form-row">
                                                
                                                <div class="col-md-2"></div>
                                                <div class="col-md-8 form-group">
                                                    <label for="validationCustom01">Nombre de Juzgado</label>
                                                    @Html.DropDownList("SelectJuzgadoPorCircuito", new SelectList(ViewBag.ListaCircuitoJuzgadoIniciales, "IdJuzgado", "Nombre"), "SELECCIONAR OPCIÓN", new { @id = "slctJuzgadoPorCircuito", @class = "custom-select form-control resultOK", @required = "required" })
                                                    <div class="valid-feedback" wfd-invisible="true">
                                                        <i class="icon-checkmark"></i> Juzgado Seleccionado
                                                    </div>
                                                    <div class="invalid-feedback" wfd-invisible="true">
                                                        <i class="icon-cancel-circle"></i> Por favor, selecciona un juzgado.
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>


                                                <div class="col-md-2"></div>
                                                <div class="col-md-4 form-group">
                                                    <label for="validationCustomUsername">Numero de Ejecución</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="icon-calendar"></i> </span>
                                                        </div>
                                                        <input type="text" class="form-control text-center" id="datetimepickerFechaInicial" name="datetime" placeholder="AAAA-MM-DD" required>
                                                        <div class="valid-feedback" wfd-invisible="true">
                                                            <i class="icon-checkmark"></i> Fecha Inicial.
                                                        </div>
                                                        <div class="invalid-feedback" wfd-invisible="true">
                                                            <i class="icon-cancel-circle"></i> Por favor, seleeciona fecha inicial.
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 form-group">
                                                    <label for="validationCustomUsername">Numero de Ejecución</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="icon-calendar"></i> </span>
                                                        </div>
                                                        <input type="text" class="form-control text-center" id="datetimepickerFechaFinal" name="datetime" placeholder="AAAA-MM-DD" required>
                                                        <button class="btn btn-success ml-2" type="submit" id="btnConsultarPromocion" data-toggle="tooltip" data-placement="top" title="" data-original-title="Generar PDF por fechas"><i class="icon-download2"></i></button>
                                                        <div class="valid-feedback" wfd-invisible="true">
                                                            <i class="icon-checkmark"></i> Fecha Final.
                                                        </div>
                                                        <div class="invalid-feedback" wfd-invisible="true">
                                                            <i class="icon-cancel-circle"></i> Por favor, selecciona fecha final.
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>

                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingTwo">
                                <h5 class="mb-0">
                                    <button class="btn btn-link collapsed text-success" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                       <i class="icon-sun"></i> Reporte por Día
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                                <div class="card-body">
                                    <!-- Contenido -->

                                    <div class="col">
                                        <form class="needs-validation" id="FrmReporteInicialDia" novalidate="">
                                            <div class="form-row">
                                                <div class="col-md-2"></div>
                                                <div class="col-md-8 form-group">
                                                    <label for="validationCustom01">Nombre de Juzgado</label>
                                                    <div class="input-group">
                                                        @Html.DropDownList("SelectJuzgadoPorCircuito", new SelectList(ViewBag.ListaCircuitoJuzgadoPromociones, "IdJuzgado", "Nombre"), "SELECCIONAR OPCIÓN", new { @id = "slctJuzgadoPorCircuitoDia", @class = "custom-select form-control resultOK", @required = "required" })
                                                        <button class="btn btn-success ml-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Generar PDF por día"><i class="icon-download2"></i></button>
                                                        <div class="valid-feedback" wfd-invisible="true">
                                                            <i class="icon-checkmark"></i> Juzgado Seleccionado
                                                        </div>
                                                        <div class="invalid-feedback" wfd-invisible="true">
                                                            <i class="icon-cancel-circle"></i> Por favor, selecciona un juzgado.
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    Promociones
                </div>
            </div>
        </div>
    </div>
</div>





@Scripts.Render("~/Scripts/Master/Jquery")
@Scripts.Render("~/Scripts/Modules/Ejecucion/Reportes")

