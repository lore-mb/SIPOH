
@{
    ViewBag.Title = "Consignaciones Historicas";
}

<div class="container-fluid">
    <div class="row">
        <div class="card shadow-sm  col-sm-12">

            <div class="card-header">
                <h6 class="card-title">
                    Registro de Consignación Historica
                </h6>
            </div>

            <div class="card-body">
                <!-- Guia -->
                <ul class="nav nav-pills nav-success" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="juzgadoA-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true"><i class="icon-office mr-2"></i>Juzgado Acusatorio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="juzgadoT-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"><i class="icon-library mr-2"></i> Juzgado Tradicional</a>
                    </li>
                </ul>

                <div class="tab-content mt-2 mb-3" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <form id="formBuscaAcusatorioCausas" class="needs-validation" novalidate>
                            <div class="form-row">
                                <div class="col-md-12 col-lg-6">

                                    <label for="validationCustom04"><strong>Juzgado de Procedencia</strong></label>

                                    @Html.DropDownList("SelectJuzgadoAcusatorio", (SelectList)ViewBag.JuzgadosAcusatorios, "SELECCIONAR OPCIÓN", new { @id = "slctJuzgado", @class = "custom-select custom-select-sm mt-2", @required = "required" })

                                    <div class="invalid-feedback">
                                        <i class="icon-notification"></i> Seleccione un Juzgado de Procedencia.
                                    </div>

                                </div>

                                <div class="col-md-6 col-lg-3">
                                    <label class="" for="inpNumero" id="NumeroLabel"><b>Numero de Causa</b></label>
                                    <div class="input-group">
                                        <input type="text" id="inpCausaAcusatorio" name="NumeroExpediente" class="form-control form-control-sm mt-2" placeholder="0000/0000" aria-label="Small" aria-describedby="inputGroup-sizing-sm" required>
                                        <div class="invalid-feedback">
                                            <i class="icon-notification"></i> Introduzca un numero de causa.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-3">
                                    <label class="" for="inpNumero" id="NumeroLabel"><b>Numero Unico de Caso</b></label>
                                    <div class="input-group">
                                        <input type="text" id="inpNuc" placeholder="00-0000-0000" name="Nuc" class="form-control form-control-sm mt-2 mr-2" aria-label="Small" aria-describedby="inputGroup-sizing-sm" required>
                                        <button class="btn btn-success btn-sm mt-2" type="submit" id="btnNUC" data-toggle="tooltip" data-placement="top" title="Consultar Expediente"><i class="fa fa-search"></i></button>
                                        <div class="invalid-feedback">
                                            <i class="icon-notification"></i> Introduzca un numero unico de caso.
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <input class="mt-1 mr-2" type="checkbox" value="" id="checkSinNuc" checked>
                                        <label class="mt-1" for="checkSinNuc">Sin NUC</label>
                                    </div>
                                </div>
                            </div>
                            
                        </form>
                    </div>

                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <form id="formBuscaCausasTradicional" class="needs-validation" novalidate>
                            <div class="form-row">
                                <div class="col-md-3">
                                    <label for="slcNumero"><strong>Distrito de Procedencia</strong></label>

                                    @Html.DropDownList("DistritoPorCircuito", (SelectList)ViewBag.DistritosPorCircuito, "SELECCIONAR OPCIÓN", new { @id = "slctDistrito", @class = "custom-select custom-select-sm mt-2", @required = "required" })

                                    <div class="invalid-feedback">
                                        <i class="icon-notification"></i> Seleccione un Distrito de Procedencia.
                                    </div>

                                </div>

                                <div class="col-md-5">
                                    <label for="validationCustom04"><strong>Juzgado de Procedencia</strong></label>
                                    <select class="custom-select custom-select-sm mt-2" id="slctJuzgadoTradi" required>
                                        <option selected value="">SELECCIONAR OPCIÓN</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        <i class="icon-notification"></i> Seleccione un Juzgado de Procedencia.
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="validationCustomUsername"><strong>Numero de Causa</strong></label>
                                    <div class="input-group" id="divCAU">
                                        <input type="text" class="form-control form-control-sm mt-2 mr-2" id="inpCausaTradicional" aria-describedby="inpCAU" placeholder="0000/0000" required>
                                        <button class="btn btn-success btn-sm mt-2" type="submit" id="btnCausa" data-toggle="tooltip" data-placement="top" title="Consultar Causas"><i class="fas fa-search"></i></button>
                                        <div class="invalid-feedback">
                                            <i class="icon-notification"></i> Introduzca un Numero de Causa.
                                        </div>
                                  
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Master/Jquery")
@Scripts.Render("~/Scripts/Master/InptuMask")
@Scripts.Render("~/Scripts/Modules/Ejecucion/ConsignacionesHistoricas")

